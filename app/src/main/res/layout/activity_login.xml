<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a.app10.Activity.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:textSize="40sp"
        android:typeface="sans"
        android:textColor="@color/textGreen"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:id="@+id/title"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="60dp"
        android:textSize="15sp"
        android:textColor="#909090"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="20dp"
        android:background="@drawable/logined"
        android:layout_below="@+id/title"
        android:drawableLeft="@drawable/smartphone"
        android:drawablePadding="12dp"
        android:id="@+id/ed_username"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#909090"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:background="@drawable/logined"
        android:layout_below="@+id/ed_username"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="12dp"
        android:id="@+id/ed_pwd"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_pwd"
        android:textColor="@color/textGreen"
        android:layout_below="@+id/ed_pwd"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:id="@+id/forget_pwd"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/forget_pwd"
        android:text="@string/login"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColor="#ffffff"
        android:background="@drawable/buttonbackground"
        android:id="@+id/bu_login"
        style="?android:attr/borderlessButtonStyle"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/forget_pwd"
        android:text="@string/registe"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColor="#ffffff"
        android:background="@drawable/buttonbackground"
        android:layout_toRightOf="@+id/bu_login"
        android:id="@+id/bu_reg"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bu_reg"
        android:text="@string/quick_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/quick_login"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/weibo"
        android:layout_below="@+id/quick_login"
        android:layout_toLeftOf="@+id/qq"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/background" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/weibo"
        android:layout_below="@+id/quick_login"
        android:layout_toLeftOf="@+id/qq"
        android:layout_marginTop="30dp"
        android:layout_marginRight="37dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/quick_login"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/qq"
        android:src="@drawable/background" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qq"
        android:layout_below="@+id/quick_login"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/weixin"
        android:src="@drawable/background"
        android:layout_below="@+id/quick_login"
        android:layout_toRightOf="@+id/qq"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/weixin"
        android:layout_below="@+id/quick_login"
        android:layout_toRightOf="@+id/qq"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="37dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quick_login"
        android:id="@+id/modify_data"
        android:text=""/>

</RelativeLayout>
