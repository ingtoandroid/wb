<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/wholebackground"
    tools:context="com.example.a.app10.Activity.ExpertOrderActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/background_order_expert"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="170dp" />
        <LinearLayout
            android:background="#00000000"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#00000000"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
                <TextView
                    android:layout_gravity="center"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:text="专家预约"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.Toolbar>
            <include
                android:id="@+id/head"
                layout="@layout/professor_item"/>
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center"
                    android:text="专家预约时间表"
                    android:textColor="@color/textGreen"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"/>
                <ImageButton
                    android:id="@+id/btnChooseDate"
                    android:background="@drawable/choose_time"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/expert_order_form"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardDetail"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Spinner
                android:padding="5dp"
                android:id="@+id/spinner"
                android:background="@drawable/stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:padding="2dp"
                android:textColorHint="@color/stringDark"
                android:background="@drawable/stroke"
                android:id="@+id/etTitle"
                android:layout_marginTop="5dp"
                android:hint="预约标题"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="top"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/stringLight"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/stroke"
                android:id="@+id/etContent"
                android:hint="这里是详细的预约内容"
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <Button
        android:id="@+id/btnOrder"
        android:text="预约"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/button_side_press"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
