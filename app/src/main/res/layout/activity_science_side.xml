<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sicence"
                    android:layout_height="@dimen/sicence"
                    android:src="@drawable/zhanxianxingshi" />

                <TextView
                    android:id="@+id/tvSideTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sicence"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="展现形式"
                    android:textColor="@color/stringDark" />
            </LinearLayout>

            <com.example.a.app10.view.FlowLayout
                android:layout_marginTop="10dp"
                android:id="@+id/grid1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sicence"
                    android:layout_height="@dimen/sicence"
                    android:src="@drawable/yundongxiangmu" />

                <TextView
                    android:id="@+id/tvSideTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sicence"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="展现形式"
                    android:textColor="@color/stringDark" />
            </LinearLayout>

            <com.example.a.app10.view.FlowLayout
                android:layout_marginTop="10dp"
                android:id="@+id/grid2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sicence"
                    android:layout_height="@dimen/sicence"
                    android:src="@drawable/yundongmubiao" />

                <TextView
                    android:id="@+id/tvSideTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sicence"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="展现形式"
                    android:textColor="@color/stringDark" />
            </LinearLayout>

            <com.example.a.app10.view.FlowLayout
                android:layout_marginTop="10dp"
                android:id="@+id/grid3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <Button
            android:textColor="@color/stringCenter"
            android:id="@+id/btnRecycle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#eee"
            android:text="重置" />

        <Button
            android:textColor="#fff"
            android:id="@+id/btnSure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgroundcolor"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>