<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_points2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a.app10.Activity.MyPointsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/backgroundcolor"
        android:id="@+id/top_point">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:id="@+id/title_top_point"
            android:layout_marginTop="30dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/back"
                android:background="@drawable/back"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/MyPoint"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="50sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/title_top_point"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:id="@+id/point_tx" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_tx"
            android:layout_centerHorizontal="true"
            android:text="@string/current_integral"
            android:textColor="#ffffff" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_point"
        android:background="@color/wholebackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/divid_part">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/details"
                android:background="#d1d1d1"
                android:id="@+id/divid_left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/integration_details"
                android:textSize="16sp"
                android:id="@+id/details"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toRightOf="@+id/details"
                android:layout_centerVertical="true"
                android:background="#d1d1d1"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/divid_part"
            android:id="@+id/recyclerview_point"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>
